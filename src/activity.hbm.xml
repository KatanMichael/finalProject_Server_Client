<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.hit.java.models.Activity" table="ACTIVITY">
        <id name="id" type="int" column="ID" >
            <generator class="increment"/>
        </id>

        <property name="hasSets">
            <column name="HAS_SETS"/>
        </property>

        <property name="name">
            <column name="NAME"/>
        </property>
        <property name="numberOfSets">
            <column name="NUMBER_OF_SETS"/>
        </property>

    </class>
</hibernate-mapping>